.container {
  width: 100%;
  height: 100%;
}

/* 标题模块 */
.title_container {
  padding: 35rpx 20rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, .2);
}

.title_container .scroll {
  display: flex;
  overflow: hidden;
  white-space: nowrap;
}

.title_container .scroll .demo {
  display: inline-block;
  width: 300rpx;
  margin-right: 20rpx;
}

.active {
  color: skyblue;
}

/* 隐藏滚动条 */
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

/* 内容模块 */
.content_container {
  margin: 20rpx;
}

.content_container .scroll_y {
  height: calc(100vh - 84rpx);
}

.content_container .demo {
  display: flex;
  flex-direction: column;
  height: 500rpx;
  background: #f5f5f5;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  border: 1rpx solid rgba(0, 0, 0, .2);
}


.content_container .demo .text {
  display: flex;
  align-items: center;
}

.content_container .demo .text image {
  margin: 20rpx;
  width: 250rpx;
  height: 280rpx;
  border-radius: 20rpx;
}


.content_container .right .name {
  margin: 0 10rpx 10rpx 10rpx;
  font-size: 40rpx;
}
.content_container .right .email{
  font-size: 36rpx;
  margin-left: 10rpx;
}
.content_container .right .email_content{
  font-size: 30rpx;
  margin: 5rpx  10rpx 0;
}

.content_container .intro{
  margin: 0 20rpx 20rpx 20rpx;
  border: 1rpx solid #f5f5f5;
  border-radius: 20rpx;
  background: rgba(0,0,0,.05);
}

.intro .title{
  padding: 10rpx;
  padding-bottom: 0;
}
.intro .intro_content{
  padding: 0 10rpx 20rpx 10rpx;
  font-size: 30rpx;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  line-height: 25px;
  height: 40px;
}

/* 未登录 */
.NoLogin{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 100rpx;
}
.NoLogin image{
  width: 500rpx;
  height: 300rpx;
  margin-bottom: 40rpx;
  border-radius: 20rpx;
}