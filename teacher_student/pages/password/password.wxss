.container {
  position: relative;
  width: 100%;
  height: 100%;
}
/* 背景 */
.container .background {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 0;
}

/* 登录模块 */
.container .update_container {
  position: absolute;
  width: 550rpx;
  height: 700rpx;
  top: 200rpx;
  left: 100rpx;
  padding: 30rpx;
  box-sizing: border-box;
  border: 1rpx solid white;
  border-radius: 20rpx;
  z-index: 1;
  box-shadow: 10rpx 10rpx 30rpx 10rpx #a2a3a9;
}

/* 账号模块、密码模块 */
.update_container .account{
  margin-bottom: 30rpx;
}

.account .text{
  color: #333;
  padding-bottom: 8rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.title{
  margin-bottom: 10rpx;
  font-size: 36rpx;
}
.hint,
.else{
  display: flex;
  align-items: center;
  height: 40rpx;
  margin: 10rpx;
  font-size: 28rpx;
}

.hint .text{
  font-size: 22rpx;
  margin-left: 10rpx;
}

.oldPassword{
  margin-bottom: 30rpx;
}
.newPassword{
  margin-bottom: 40rpx;
}

.update_container input{
  color: #333;
  padding-bottom: 8rpx;
  border-bottom: 1rpx solid #a2a3a9;
}
.updateBtn{
  margin: 0 auto;
  width: 200rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  color: skyblue;
  border: 1rpx solid skyblue;
  border-radius: 30rpx;
}

.green{
  color: greenyellow;
}

.red{
  color: red;
}
