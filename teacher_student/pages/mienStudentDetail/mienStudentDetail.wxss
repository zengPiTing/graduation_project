.container{
  width: 100%;
}
.student{
  margin: 10rpx 20rpx 60rpx 20rpx;
  border: 1rpx solid #ccc;
  padding: 20rpx;
  background: #f5f5f5;
  border-radius: 20rpx;
}
.title{
  text-align: center;
  font-size: 35rpx;
  font-weight: 600;
  color: red;
  margin-bottom: 20rpx;
}
.photo{
  display: flex;
  flex-direction: column;
  width: 500rpx;
  height: 400rpx;
}
.img{
  width: 100%;
  height: 300rpx;
  border-radius: 20rpx;
}
.name{
  margin-top: 20rpx;
  font-size: 35rpx;
}
.text{
  width: 100%;
  text-indent: 2em;
}