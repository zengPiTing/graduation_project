.container {
  position: relative;
  width: 100%;
  height: 100%;
}


/* 学生意向填报模块 */
.container .choice_container_student {
  position: absolute;
  width: 600rpx;
  height: 900rpx;
  top: 150rpx;
  left: 50%;
  transform: translateX(-50%);
  border: 1rpx solid white;
  border-radius: 20rpx;
  z-index: 1;
  box-shadow: 10rpx 10rpx 30rpx 10rpx #a2a3a9;
}

.choice_container_student .title {
  margin: 10rpx auto;
  width: 300rpx;
  text-align: center;
  font-size: 36rpx;
}

.choice_container_student .from {
  width: 510rpx;
  margin: 0 auto;
}

.choice_container_student .from .name {
  margin-top: 20rpx;
  font-size: 32rpx;
}

.choice_container_student .from .name .input {
  margin: 5rpx 20rpx 0 20rpx;
  height: 46rpx;
  line-height: 46rpx;
  border-bottom: 1rpx solid #a2a3a9;
  font-size: 35rpx;
}

.name textarea{
  width: 100%;
  height: 200rpx;
  border: 1rpx solid #ccc;
}

.choice_container_student .tishi {
  margin-top: 30rpx;
  font-size: 30rpx;
}

.choice_container_student .btn {
  width: 200rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  margin: 60rpx auto 0;
  border: 1rpx solid #ccc;
  border-radius: 30rpx;
}


.choice_container_student .red {
  font-size: 20rpx;
  color: red;
}

/* 导师意向模块 */
.container_teacher{
  position: relative;
  width: 100%;
}

/* 头部区域 */
.container_teacher .title{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  text-align: center;
  height: 60rpx;
  line-height: 60rpx;
  margin: 0 auto;
  font-size: 38rpx;
  border-bottom: 1rpx solid rgba(0,0,0,.5);
  background: #f5f5f5;
}
.container_teacher .choice_teacher{
  width: 90%;
  margin: 80rpx auto;
  border: 1rpx solid #f5f5f5;
  background: #f5f5f5;
  border-radius: 20rpx;
}

.container_teacher .choice_teacher .demo{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 20rpx 50rpx 20rpx 20rpx;
  font-size: 36rpx;
}
.demo image{
  width: 200rpx;
  height: 200rpx;
}

.container_teacher .choice_teacher .textContent{
  margin: 0 0 20rpx 20rpx;
  font-size: 36rpx;
}
.container_teacher .choice_teacher .remark{
  font-size: 28rpx;
  padding: 10rpx;
  margin: 10rpx 20rpx 20rpx 0;
  border: 1rpx solid #ccc;
  border-radius: 20rpx;
}
.textContent textarea{
  margin-top: 10rpx;
  padding: 10rpx;
  height: 100rpx;
  font-size: 30rpx;
  border: 1rpx solid rgba(0,0,0,.4);
  border-radius: 20rpx;
}

.container_teacher .btn{
  display: flex;
  justify-content: space-between;
}

.container_teacher .btn .left{
  margin: 20rpx 0 30rpx 20rpx;
  width: 200rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  border: 1rpx solid rgba(0,0,0,.4);
  border-radius: 30rpx;
  background: greenyellow;
}
.container_teacher .btn .right{
  margin: 20rpx 30rpx 30rpx 0;
  width: 200rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  border: 1rpx solid rgba(0,0,0,.4);
  border-radius: 30rpx;
  background: rgb(240, 149, 149);
}