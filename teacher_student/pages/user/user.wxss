.container {
  width: 100%;
  height: 100%;
  background: #f5f5f5;
}

/* 背景模块 */
.container_background {
  position: relative;
}

.container_background image {
  width: 100%;
  height: 520rpx;
}

.container_background .headPhoto {
  position: absolute;
  top: 130rpx;
  left: 20rpx;
  width: 120rpx;
  height: 120rpx;
  line-height: 120rpx;
  border-radius: 50%;
  text-align: center;
  background: skyblue;
  font-size: 30rpx;
}

.container_background .userInfo .user {
  position: absolute;
  left: 170rpx;
  top: 130rpx;
  right: 20rpx;
  height: 120rpx;
  background: white;
  border-radius: 20rpx;
  opacity: .5;
}

.container_background .userInfo .user .text {
  padding: 10rpx 0 0 20rpx;
}

.container_background .img {
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  font-size: 60rpx;
  color: skyblue;
}

/* 内容模块 */
.cover_container {
  position: relative;
  margin-top: -150rpx;
  background: #f5f5f5;
  padding-bottom: 20rpx;
}

.cover_container .cover {
  position: absolute;
  left: 0;
  top: -34rpx;
  width: 100%;
  height: 36rpx;
}

.cover_container .content {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 200rpx;
  margin: 0 20rpx 10rpx;
  background: #fff;
  border-radius: 15rpx;
}

.cover_container .content .text1 {
  display: flex;
  align-items: center;
  padding: 40rpx 30rpx 0;
}

.cover_container .content .text2 {
  display: flex;
  align-items: center;
  padding: 0 30rpx 40rpx;
}

.cover_container .content .text1 .img,
.cover_container .content .text2 .img {
  padding-top: 5rpx;
  font-size: 45rpx;
  margin-right: 50rpx;
}

.cover_container .content .text1 .more,
.cover_container .content .text2 .more {
  position: absolute;
  right: 60rpx;
  font-size: 45rpx;
}

.daoshi_container{
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 150rpx;
  margin: 0 20rpx;
  background: #fff;
  border-radius: 15rpx;
}

.daoshi_container .left{
  margin-left: 40rpx;
}

.daoshi_container .img{
  padding-top: 5rpx;
  font-size: 45rpx;
  margin-right: 40rpx;
}

.daoshi_container .more{
  font-size: 45rpx;
  margin-right: 40rpx;
}