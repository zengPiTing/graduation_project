.container{
  width: 100%;
}
.student{
  height: 800rpx;
  margin: 10rpx 20rpx 60rpx 20rpx;
  border: 1rpx solid #ccc;
  padding: 20rpx;
  background: #f5f5f5;
  border-radius: 20rpx;
  overflow: hidden;
}
.title{
  text-align: center;
  font-size: 35rpx;
  font-weight: 600;
  color: red;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  margin-bottom: 20rpx;
}
.photo{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 400rpx;
  height: 400rpx;
}
.img{
  width: 100%;
  height: 300rpx;
  border-radius: 20rpx;
}
.name{
  margin-top: 20rpx;
  font-size: 35rpx;
}
.text{
  width: 100%;
  text-indent: 2em;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 7;
  -webkit-box-orient: vertical;
  line-height: 40rpx;
  height: 280rpx;
}

/* 未登录 */
.NoLogin{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 100rpx;
}
.NoLogin image{
  width: 500rpx;
  height: 300rpx;
  margin-bottom: 40rpx;
  border-radius: 20rpx;
}