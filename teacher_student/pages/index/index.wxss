/* 导航模块 */
.navigation {
  width: 100%;
  height: 200rpx;
  background: rgba(0, 0, 0, .05);
}

/* 登录按钮 */
.navigation .login {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 100%;
  padding-top: 30rpx;
}

.navigation .login .go_login {
  width: 300rpx;
  height: 70rpx;
  text-align: center;
  line-height: 70rpx;
  background: #87cedf;
  border-radius: 30rpx;
  font-size: 35rpx;
}

.navigation .login .text {
  margin-top: 10rpx;
  font-size: 30rpx;
}

/* 导航栏 */
.navigation .tab {
  display: flex;
  padding-top: 10rpx;
}

.navigation .tab .go {
  display: flex;
  width: 25%;
  flex-direction: column;
  align-items: center;
}

.go .iconfont {
  width: 100rpx;
  margin: 20rpx 20rpx 0;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  border-radius: 50%;
  background: white;
  color: #87cedf;
  font-size: 65rpx;
}

.go .text {
  margin-top: 10rpx;
  font-size: 26rpx;
}

/* 学院精彩时刻模块 */
.wonderful_moment {
  margin-top: 10rpx;
  width: 100%;
  background: rgba(0, 0, 0, .05);
}

/* 导师风向标*/
.wonderful_moment .head {
  position: relative;
  margin-top: 20rpx;
  border: 1rpx solid rgba(0, 0, 0, .1);
}

.wonderful_moment .head .title {
  display: block;
  margin: 10rpx 20rpx;
  font-size: 35rpx;
}


.wonderful_moment .TeacherContent {
  height: 360rpx;
  overflow-y: auto;
}


.wonderful_moment .TeacherContent .teacherClass{
  width: 100%;
}
.wonderful_moment .TeacherContent .teacherTitle{
  text-align: center;
  font-size: 35rpx;
  font-weight: 600;
  margin: 50rpx 0 10rpx 0;
}
.wonderful_moment .TeacherContent .teacherFor{
  display: flex;
  flex-wrap: wrap;
  align-content: space-around;
}

.wonderful_moment .TeacherContent .name {
  width: 150rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 30rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.wonderful_moment .TeacherContent .name:hover {
  color: red;
}

/* 学生风采 */
.scroll_y {
  /* height: calc(100% - 800rpx); */
  height: 560rpx;
  width: 100%;
  /* overflow-y: auto; */
}

.excellent_student {
  position: relative;
  width: 100%;
  height: 250rpx;
  margin-bottom: 20rpx;
}

.excellent_student image {
  width: 250rpx;
  margin-left: 10rpx;
  height: 250rpx;
  border-radius: 20rpx;
}

.excellent_student .content {
  position: absolute;
  height: 180rpx;
  /* background: #000; */
  top: 10rpx;
  left: 270rpx;
  right: 10rpx;
}

.excellent_student .content .title {
  font-size: 38rpx;
}

.excellent_student .content .text {
  height: 180rpx;
  font-size: 30rpx;
  /* 2行隐藏就两倍，三行隐藏就三倍*/
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 4;
  -webkit-box-orient: vertical;
  line-height: 20px;
  height: 80px;
}