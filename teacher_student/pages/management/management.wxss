.container{
  position: relative;
  width: 100%;
  height: 100%;
  background: #f5f5f5;
}
/* 底部导航栏模块 */
.container .footer_nav{
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  width: 100%;
}

.footer_nav .feedback,
.footer_nav .teacher{
  width: 50%;
  text-align: center;
  padding: 30rpx 0;
  background: white;
  font-size: 36rpx;
}
.footer_nav .teacher{
  border-right: 1rpx solid #f5f5f5;
}
.blue{
  color: skyblue;
}

/* 头部导航栏 */
.head_nav{
  padding: 35rpx 20rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, .2);
}
.head_nav .scroll_x{
  display: flex;
  overflow: hidden;
  white-space: nowrap;
  font-size: 35rpx;
}
.head_nav .scroll_x .demo{
  display: inline-block;
  padding: 0 10rpx;
  margin-right: 10rpx;
}

.active{
  color: skyblue;
  /* padding-bottom: 5rpx;
  border-bottom: 1rpx solid #f5f5f5; */
}

/* 隐藏滚动条 */
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

/* 导师匹配详情内容区域 */
.content_container{
  overflow: hidden;
  width: 100%;
}
.content_container .scroll_y{
  width: 100%;
  margin-top: 20rpx;
  height: calc(100vh - 216rpx);
}
.content_container .demo{
  width: 100%;
}
.content_container .time{
  width: 300rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  margin: 0 auto;
  font-size: 28rpx;
}
.content_container .content{
  margin: 20rpx;
  margin-bottom: 60rpx;
  border-radius: 20rpx;
  padding:20rpx ;
  background: white;
}

.content_container .content .test{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.test image{
  width: 300rpx;
  height: 300rpx;
}

.content_container .content .end .jiyu{
  font-size: 26rpx;
  margin-left: 10rpx;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  line-height: 20px;
  height: 40px;
}
